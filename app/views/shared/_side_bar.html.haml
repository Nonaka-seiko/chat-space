.side_bar
  .side_bar__head
    %ul
      %li.side_bar__head__user_name
        = current_user.name
      %li.side_bar__head__icon_setting
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: 'icon'
      %li.side_bar__head__icon_new_message
        = link_to new_group_path do
          = fa_icon 'pencil-square-o', class: 'icon'
  .side_bar__bottom
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .side_bar__bottom__group_name
          = group.name
        .side_bar__bottom__latest_message
          = group.show_last_message
