.wrapper
  .notification
    チャットスペースが作成されました
  .side_bar
    .side_bar__head
      %ul
        %li.side_bar__head__user_name
          = current_user.name
        %li.side_bar__head__icon_setting
          = link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: 'icon'
        %li.side_bar__head__icon_new_message
          = link_to new_group_path do
            = fa_icon 'pencil-square-o', class: 'icon'
    .side_bar__bottom
      .side_bar__bottom__group_name
        グループ名１
      .side_bar__bottom__latest_message
        グループ１最新メッセージ
      .side_bar__bottom__group_name
        グループ名２
      .side_bar__bottom__latest_message
        グループ２最新メッセージ
  .main_content
    = render 'shared/main_content__head'
    = render 'shared/main_content__chat_space'
  .footer_form
    = render 'shared/footer_form__text'
    = render 'shared/footer_form__input'
